<div class="container">
    <div class="img-container">
        <img src="{{movie.image}}" alt="image">
    </div>
    <div class="content-container">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>{{movie.director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        {{#each movie.showtimes}}
        <span>{{this}} |</span>
        {{/each}}
    </div> 
</div>